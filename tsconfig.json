{
  "extends": "tsconfigs/browser-executable",
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}